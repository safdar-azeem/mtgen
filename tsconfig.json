{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "mongoose.gen": [
        "./src/types/mongoose.gen.ts"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "Product.model.ts",
    "Order.model.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}